[servers]
# First run on fresh VPS (as root, port 22):
# your-server-ip ansible_user=root ansible_port=22 ansible_ssh_private_key_file=~/.ssh/your_key

[servers:vars]
# Admin user to create
admin_user=deploy
# SSH port to migrate to
ssh_port=2244
# Path to SSH public key for admin user
ssh_key_path=~/.ssh/your_key.pub

